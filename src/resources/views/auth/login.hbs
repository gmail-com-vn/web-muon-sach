<div class="body flex">
    <div class="col-lg-8 div-title-login">
        <div class="flex text-title-login">
            <div>
                <h2>WELCOME</h2>
                <h2>TO</h2>
            </div>
            <h1>BOOK LOVERS</h1>
        </div>
        <img width="100%" src="/img/logo-login.jpg" alt="">
    </div>
    <div class="col-lg-4 div-login">
        <div class="container-form div-content-login">
            <h2>Đăng nhập</h2>
            <p>
                Nếu bạn đã có tài khoản, đăng nhập tại đây
            </p>
            {{#if errorMessage}}
            <div class="user-message-error">
                {{errorMessage}}</div>
            {{/if}}

            <form class="login-form" action="/dang-nhap" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control form-auth" id="email" name="email"
                        value="{{oldInput.email}}"></input>
                </div>
                <div class="form-group">
                    <label for="password">Mật khẩu</label>
                    <input type="password" class="form-control form-auth" id="password" name="password"
                        value="{{oldInput.password}}">
                </div>

                <button type="submit" class="btn btn-primary">Đăng nhập</button>
            </form>
            <div style="margin: 5px 0 20px 0">
                <a style="color: red;" href="/dat-lai-mat-khau">Quên mật khẩu</a>
            </div>
            <div>
                <span>Không có tài khoản? <a href="/dang-ky" style="color: rgb(136, 0, 255);">Đăng ký</a></span>
            </div>
        </div>
    </div>
</div>