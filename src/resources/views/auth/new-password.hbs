<div class="body flex">
    <div class="col-lg-8 div-title-login">
        <div class="flex text-title-login">
            <div>
                <h2>WELCOME</h2>
                <h2>TO</h2>
            </div>
            <h1>BOOK LOVERS</h1>
        </div>
        <img width="100%" src="/img/logo-login.jpg" alt="">
    </div>
    <div class="col-lg-4 div-login">
    <div class="container-form div-content-login">
        <h2>Xác nhận mật khẩu mới</h2>
        {{#if errorMessage}}
        <div class="user-message-error">{{errorMessage}}</div>
        {{/if}}

        <form class="login-form" action="/mat-khau-moi" method="POST">
            <div class="form-group">
                <label for="password">Mật khẩu mới</label>
                <input type="password" class="form-control form-auth" id="password" name="password">
            </div>
            <input type="hidden" name="userId" value="{{userId}}">
            <input type="hidden" name="passwordToken" value="{{passwordToken}}">

            <button type="submit" class="btn btn-primary">Đồng ý</button>
        </form>
    </div>
</div>
</div>