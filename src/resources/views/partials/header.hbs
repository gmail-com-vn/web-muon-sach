                <a class="my-2 my-sm-0" href="/dang-nhap">Đăng nhập</a>
            </div>
            <div class="btn-signin">
                <a class="my-2 my-sm-0" href="/dang-ky">Đăng ký</a>
            </div>
            {{/unless}}

            {{#if isAuthenticated}}
            {{#if isAuthenticatedAdmin}}
