                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <img src="/img/manager.jpg" alt="" class="user-avatar" />
                    {{user.firstname}}
                    {{user.lastname}}
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="/admin/thong-ke-giao-dich">Thống kê giao dịch</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/admin/category">Quản lý danh mục sách</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/admin/quan-ly-tai-khoan">Quản lý tài khoản</a>
                    <form action="/dang-xuat" method="POST">
                        <div class="dropdown-divider"></div>
                        <button class="dropdown-item btn" type="submit">Đăng xuất</button>
                    </form>
                </div>
            </li>
            {{/if}}

            {{#unless isAuthenticatedAdmin}}
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <img src="/{{user.avatar}}" alt="" class="user-avatar" />
                    {{user.firstname}}
                    {{user.lastname}}
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="/ho-so-cua-toi">Hồ sơ của tôi</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/member/stored/book">Quản lý sách</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/member/news">Quản lý bài đăng</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/member/danh-sach-yeu-cau">Danh sách yêu cầu</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/member/quan-ly-giao-dich">Quản lý giao dịch</a>
                    <div class="dropdown-divider"></div>
                    <form action="/dang-xuat" method="POST">
                        <button class="dropdown-item btn" type="submit">Đăng xuất</button>
                    </form>
                </div>
            </li>
            {{/unless}}
            {{/if}}
        </div>
    </div>
    <div style="background-color: #e2e2e2; height:0.5px;">
    </div>

