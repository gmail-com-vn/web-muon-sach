<div class="body">
    <div class="content-page">
        <ol class="nav-page flex">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page">Quản lý giao dịch</li>
        </ol>
    </div>
    <div class="table-responsive-lg" style="margin: 0 5%;">

        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">
                            Mã đơn hàng
                        </th>
                        <th scope="col">
                            Người mượn
                        </th>
                        <th scope="col">
                            Chủ sách
                        </th>
                        <th scope="col">Sách</th>

                        <th scope="col">
                            Thời gian tạo giao dịch
                            {{{sortable 'createdAt' _sort}}}
                        </th>
                        <th scope="col">Trạng thái{{{sortable 'status' _sort}}}</th>
                        <th scope="col">
                            Thao tác
                        </th>

                    </tr>
                </thead>

                <tbody>
                    {{#each transactions}}
                    <tr>
                        <th>{{this._id}}</th>
                        <td>
                            <div class="flex">
                                <img class="avatar" width="50" height="50" src="/{{this.nguoiMuonId.avatar}}" alt=""
                                    style="float: right;" />
                                <div>
                                    <p class="nowrap font-size14">{{this.nguoiMuonId.firstname}}
                                        {{this.nguoiMuonId.lastname}}
                                        {{#if (equalHelper this.nguoiMuonId.trangThaiXacMinh
                                        'Thành công')}}
                                        <i class="fas fa-check-circle check-icon"></i>
                                        {{/if}}
                                    </p>
                                    <span style="font-size: 12px;" class="nowrap">
                                        Mượn sách
                                    </span>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="flex">
                                <img class="avatar" width="50" height="50" src="/{{this.chuSachId.avatar}}" alt=""
                                    style="float: right;" />
                                <div>
                                    <p class="nowrap font-size14">{{this.chuSachId.firstname}}
                                        {{this.chuSachId.lastname}}
                                        {{#if (equalHelper this.chuSachId.trangThaiXacMinh
                                        'Thành công')}}
                                        <i class="fas fa-check-circle check-icon"></i>
                                        {{/if}}
                                    </p>
                                    <span style="font-size: 12px;" class="nowrap">
                                        Chủ sách
                                    </span>
                                </div>
                            </div>
                        </td>
                        <td class="flex font-size14">

                            {{!-- <img width="50px" src="/{{this.bookId.img}}" alt="" /> --}}

                            <img width="80px" height="115px"
                                src="https://cdn.chanhtuoi.com/uploads/2022/09/ipiccy-img-24.jpg.webp" alt="">

                            <div>
                                <p>Tên sách: {{this.bookId.name}}</p>
                                <p>Tác giả: {{this.bookId.author}}</p>
                            </div>

                        </td>
                        <td>{{formatDateTime this.createdAt}}</td>
                        <td>
                            {{this.trangThaiGiaoDich}}
                        </td>
                        <td>
                            <a href="" class="btn btn-outline" data-toggle="modal"
                                data-target="#transaction-detail-modal-{{this._id}}">Xem chi tiết</a>
                            <div id="transaction-detail-modal-{{this._id}}" class="modal" tabindex="-1" role="dialog">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Xem chi tiết giao dịch mượn sách
                                                <span style="font-size: 1.25rem; color: #1c9e0b;">{{this.bookId.name}}
                                                </span>
                                            </h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <p>Sách cho mượn:</p>
                                            <div class="flex" style="background-color: #f3f3f3; padding: 15px 0;">
                                                <div class="col-lg-3" style="padding-right: 0;">
                                                    <img width="100%" src="/{{this.bookId.img}}" alt="" />
                                                </div>
                                                <div class="col-lg-9">
                                                    <p>Tên sách: {{this.bookId.name}}</p>
                                                    <p>Tác giả: {{this.bookId.author}}</p>
                                                </div>
                                            </div>
                                            <div class="flex">
                                                <div class="col-lg-6">Thời gian mượn sách:</div>
                                                <div class="col-lg-6">{{this.requestId.thoiGianTra}}(ngày)</div>
                                            </div>

                                            <div class="flex item-center" style="background-color: #f3f3f3;">
                                                <div class="flex col-lg-4">
                                                    <img class="avatar" width="60" height="60"
                                                        src="/{{this.nguoiMuonId.avatar}}" alt=""
                                                        style="float: right;" />
                                                    <div>
                                                        <p>{{this.nguoiMuonId.firstname}}
                                                            {{this.nguoiMuonId.lastname}}
                                                            {{#if (equalHelper this.nguoiMuonId.trangThaiXacMinh
                                                            'Thành công')}}
                                                            <i class="fas fa-check-circle check-icon"></i>
                                                            {{/if}}
                                                        </p>
                                                        <span style="font-size: 12px;">
                                                            Mượn sách
                                                        </span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-4">
                                                    <img src="/img/bat-tay.png" width="100%" alt="">
                                                </div>

                                                <div class="flex col-lg-4">
                                                    <img class="avatar" width="60" height="60"
                                                        src="/{{this.chuSachId.avatar}}" alt="" style="float: right;" />
                                                    <div>
                                                        <p>{{this.chuSachId.firstname}}
                                                            {{this.chuSachId.lastname}}
                                                            {{#if (equalHelper this.chuSachId.trangThaiXacMinh
                                                            'Thành công')}}
                                                            <i class="fas fa-check-circle check-icon"></i>
                                                            {{/if}}
                                                        </p>
                                                        <span style="font-size: 12px;">
                                                            Chủ sách
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <h5 style="text-align: center;">Điều khoản của chủ sách</h5>
                                            <div class="col-lg-12">
                                                <p>1. Thanh toán số tiền đặt cọc là
                                                    <span class="bold">{{this.tienCoc}}</span> (VND) và nhận
                                                    lại tiền khi giao dịch hoàn tất.
                                                </p>
                                                <p>2. Ghi chú từ chủ sách: {{this.ghiChu}}.</p>
                                            </div>

                                            <h5 style="text-align: center;">Thông tin nhận sách</h5>
                                            <div class="flex">
                                                <div class="col-lg-6">
                                                    Tên người nhận sách: {{this.tenNguoiNhan}}
                                                </div>
                                                <div class="col-lg-6">
                                                    Số điện thoại: {{this.phone}}
                                                </div>
                                            </div>

                                            <div class="col-lg-12">
                                                Địa chỉ: {{this.address}}
                                            </div>

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>

                    {{else}}
                    <tr>
                        <td colspan="5" class="text-center">
                            Bạn chưa có giao dịch nào.
                        </td>
                    </tr>

                    {{/each}}
                </tbody>
            </table>
        </div>

    </div>
</div>